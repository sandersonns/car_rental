<div data-controller="hello">
  <input data-hello-target="name" type="text">
  <button data-action="click->hello#greet">Greet</button>
</div>

<%= simple_form_for @booking, data: { controller: "flatpickr" } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, collection: User.all.map{ |u| [u.email, u.id] } %>
    <%= f.input :car_id, collection: Car.all.group_by(&:brand), label_method: :model, value_method: :id, prompt: 'Select a car' %>
    <%= f.input :starts_at, as: :string, input_html: { data: { flatpickr_target: "startsAt" }, placeholder: 'Pick up date' } %>
    <%= f.input :ends_at, as: :string, input_html: { data: { flatpickr_target: "endsAt" }, placeholder: 'Drop off date' } %>
    <%= f.input :accepted %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
